root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
tab_width = 8
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.lua]
indent_size = 2
indent_style = space

[*.vim]
indent_size = 2
indent_style = space

[*.{yaml,yml}]
indent_size = 2
indent_style = space

[fontconfig/**/*.conf]
indent_style = tab

[zsh/**/*]
indent_style = tab
