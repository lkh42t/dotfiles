# vi: ft=gitconfig noet sts& sw&
[alias]
	amend = commit --amend --no-edit
[core]
	editor = nvim
	pager = delta
[delta]
	navigate = true
	side-by-side = true
	tabs = true
[diff]
	colorMoved = default
[fetch]
	prune = true
[interactive]
	diffFilter = delta --color-only
[merge]
	conflictstyle = zdiff3
