{
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": [
        "start"
      ],
      "filetypes": [
        "sh"
      ],
      "ignoredRootPaths": [
        "~"
      ]
    },
    "clangd": {
      "command": "clangd",
      "filetypes": [
        "c",
        "cpp",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        "compile_flags.txt",
        "compile_commands.json",
        ".git/"
      ]
    },
    "cmake": {
      "command": "cmake-language-server",
      "filetypes": [
        "cmake"
      ],
      "rootPatterns": [
        "build/"
      ],
      "initializationOptions": {
        "buildDirectory": "build"
      }
    },
    "diagnosticls": {
      "command": "diagnostic-languageserver",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "python",
        "sh"
      ],
      "initializationOptions": {
        "linters": {
          "flake8": {
            "command": "flake8",
            "debounce": 100,
            "args": [
              "--format=%(row)d,%(col)d,%(code).1s,%(code)s: %(text)s",
              "-"
            ],
            "offsetLine": 0,
            "offsetColumn": 0,
            "sourceName": "flake8",
            "formatLines": 1,
            "formatPattern": [
              "(\\d+),(\\d+),([A-Z]),(.*)(\\r|\\n)*$",
              {
                "line": 1,
                "column": 2,
                "security": 3,
                "message": 4
              }
            ],
            "securities": {
              "W": "warning",
              "E": "error",
              "F": "error",
              "C": "error",
              "N": "error"
            }
          }
        },
        "filetypes": {
          "python": "flake8"
        },
        "formatters": {
          "black": {
            "command": "black",
            "args": [
              "--quiet",
              "-"
            ]
          },
          "isort": {
            "command": "isort",
            "args": [
              "--quiet",
              "-"
            ]
          },
          "shfmt": {
            "command": "shfmt",
            "args": [
              "-"
            ]
          }
        },
        "formatFiletypes": {
          "python": [
            "isort",
            "black"
          ],
          "sh": "shfmt"
        }
      }
    },
    "golang": {
      "command": "gopls",
      "filetypes": [
        "go"
      ],
      "rootPatterns": [
        "go.mod"
      ],
      "disableWorkspaceFolders": true
    },
    "latex": {
      "command": "texlab",
      "ignoredRootPaths": [
        "~"
      ],
      "filetypes": [
        "tex",
        "bib",
        "plaintex",
        "context"
      ]
    },
    "python": {
      "command": "jedi-language-server",
      "trace.server": "verbose",
      "filetypes": [
        "python"
      ]
    },
    "rust": {
      "command": "rls",
      "filetypes": [
        "rust"
      ],
      "rootPatterns": [
        "Cargo.toml"
      ]
    }
  }
}
